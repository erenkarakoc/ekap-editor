{
  "name": "ekap-editor-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "EKAP Edit√∂r Desktop App",
  "main": "dist/main.js",
  "author": "EKAP",
  "scripts": {
    "dev": "tsc && concurrently -k -n next,electron -c blue,green \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "cd .. && npm run dev",
    "dev:electron": "wait-on -t 30000 tcp:3000 && electron .",
    "compile": "tsc",
    "build:nextjs": "node scripts/build-nextjs.mjs",
    "build": "npm run build:nextjs && tsc && electron-builder --config electron-builder.yml",
    "start": "electron ."
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.0",
    "typescript": "^5.7.0",
    "wait-on": "^8.0.0"
  }
}
